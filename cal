class Calculator:
    def __init__(self):
        self.result = 0
        self.operator = None

    def add(self, value):
        if self.operator == "+":
            self.result += value
        elif self.operator == "-":
            self.result -= value
        elif self.operator == "*":
            self.result *= value
        elif self.operator == "/":
            if value == 0:
                return "0으로 나눌 수 없습니다."
            self.result /= value
        else:
            self.result = value
        return self

    def set_operator(self, operator):
        self.operator = operator
        return self

    def calculate(self):
        return self.result

    def display_result(self):
        print(self.result)

calculator = Calculator()

while True:
    user_input = input()
    
    if user_input == "=":
        calculator.display_result()
        break

    if user_input in {"+", "-", "*", "/"}:
        calculator.set_operator(user_input)
    else:
        try:
            number = int(user_input)
            calculator.add(number)
        except ValueError:
            print("유효한 입력이 아닙니다. 정수를 입력하세요.")
